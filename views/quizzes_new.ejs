      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include('nav') %>
    <h1>Create Quiz</h1>
    <label for="QuizTitle">Quiz Title:</label>
    <input type="text" />
    <br />
    <main class="quiz-container">
      <section class="newquiz">
        <form id="form1" action="/" method="POST">
          <label for="question1">Question</label>
          <input type="text" name="question1" />
          <br />
          <input type="checkbox" name="Q1correct" value="A" /> 
          <label for="question">A</label>
          <input type="text" name="Q1firstanswer" />
          <br />
          <input type="checkbox" name="Q1correct" value="B" />    
          <label for="question">B</label>
          <input type="text" name="Q1secondanswer" />
          <br />
          <input type="checkbox" name="Q1correct" value="C" />   
          <label for="question">C</label>
          <input type="text" name="Q1thirdanswer" />
          <br />
          <input type="checkbox" name="Q1correct" value="D" />   
          <label for="question">D</label>
          <input type="text" name="Q1fourthanswer" />
          <br />
          <br />

          <label for="question2">Question</label>
          <input type="text" name="question2" />
          <br />
          <input type="checkbox" name="Q2correct" value="A" /> 
          <label for="question">A</label>
          <input type="text" name="Q2firstanswer" />
          <br />
          <input type="checkbox" name="Q2correct" value="A" />    
          <label for="question">B</label>
          <input type="text" name="Q2secondanswer" />
          <br />
          <input type="checkbox" name="Q2correct" value="A" />   
          <label for="question">C</label>
          <input type="text" name="Q2thirdanswer" />
          <br />
          <input type="checkbox" name="Q2correct" value="A" />   
          <label for="question">D</label>
          <input type="text" name="Q2fourthanswer" />
          <br />
          <br />
        </form>
      </section>
    </main>

    <!-- <button class="addquestion">Add Question</button> -->

    <form action="/">
      <p>Please choose if you would like your quiz to be private or public:</p>
        <input type="radio" id="public" name="post_public" value="Public" />  
      <label for="html">Public</label><br />
      <input type="radio" id="private" name="post_private" value="Private" />
        <label for="private">Private</label><br />
    </form>

    <button type="submit" onclick="submitForms()" class="postquiz">
      Post Quiz
    </button>
    <script>
      submitForms = function () {
        document.getElementById("form1").submit();
        document.getElementById("form2").submit();
      };
    </script>
  </body>
</html>
