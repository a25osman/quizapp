    <main>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Quiz Title</th>
            <th scope="col">Start Quiz</th>
            <th scope="col">Delete Quiz</th>
          </tr>
        </thead>
        <tbody>
          <% for (let quiz of quizzes) { %>
          <tr>
            <td><%= quiz.title %></td>
            
            <td>
              <!-- Start Button -->
              <form method="GET" action="/quiz/<%= quiz.id %>">
                <button
                  style="
                    border: 1px solid blue;
                    color: blue;
                    background-color: transparent;
                  "
                  type="submit"
                >
                  Start!
                </button>
              </form>
            </td>

            <td>
              <!-- Share Button -->
              <form method="POST" action="/quiz/<%= quiz.id %>/delete">
                <button
                  style="
                    border: 1px solid red;
                    color: red;
                    background-color: transparent;
                  "
                  type="submit"
                >
                  Delete!
                </button>
              </form>
            </td>
            
          </tr>
          <% } %>
        </tbody>
      </table>
    </main>
  </body>
</html>
